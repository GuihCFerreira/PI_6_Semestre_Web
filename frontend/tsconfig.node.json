{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Outras opções */
    "composite": true,  // Necessário para referenciar este tsconfig de outros
    "noEmit": true  // Impede a geração de arquivos no desenvolvimento
  },
  "include": ["vite.config.ts"],  // Configuração do Vite ou arquivos relevantes do seu projeto
  "exclude": ["node_modules"]  // Excluir node_modules para evitar que sejam analisados
}
